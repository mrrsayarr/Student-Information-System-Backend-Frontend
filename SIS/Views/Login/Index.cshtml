    <div id="layoutAuthentication">
        <main>
            <div id="layoutAuthentication">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                            <div class="card-body">
                                <form>
                                    @using (Html.BeginForm())
                                    {
                                        // Uyarı Mesajı
                                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                        {
                                            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                                        }

                                        <label for="Username">Number/Username</label>
                                        <div class="form-floating mb-3">
                                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control p-2", @placeholder = "Username" })
                                        </div>

                                        <label for="Password">Password</label>
                                        <div class="form-floating mb-3">
                                                @Html.PasswordFor(x => x.Password, new { @class = "form-control p-2", @placeholder = "Password" })
                                        </div>

                                        <div class="form-check mb-3">
                                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                            <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                                        </div>
                                        
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" asp-area="" asp-controller="Login" asp-action="Index">Forgot Password?</a>
                                            <div class="form-group mt-2">
                                                <input type="submit" value="Login" class="btn btn-primary" />
                                            </div>

                                            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                                                <div style="text-align:end">
                                                    <a>Select</a>
                                                </div>
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                                        <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="LoginAdmin">Login Admin</a></li>
                                                        <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="LoginAcademic">Login Academic</a></li>
                                                        <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Index">Login Student</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                </form>
                            </div>
                            <div class="card-footer text-center py-3"></div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>

